<%- include partials/header.ejs %>
  <section class='container-fluid'>
    <header class='jumbotron'>
      <h1>List Your House</h1>
    </header>
  </section>

  <section class='container new-house-form'>
    <form action='/houses' method="post" enctype="multipart/form-data">
      <div class='form-group'>
        <label for='name'>Property Name</label>
        <input type='text' class='form-control' id='name' name='name' placeholder='Enter your properties name.'>
      </div>
      <div class='form-group'>
        <label for='description'>Property Decription</label>
        <textarea type='text' class='form-control' id='description' name='description' placeholder='Give a brief overview of your property.'></textarea>
      </div>
      <div class='form-group'>
        <label for='thumbnail'>Feature Image</label>
        <input type='file' class='form-control-file' id='thumbnail' aria-describedby='thumbnailHelp' name='thumbnail'>
        <small id='thumbnailHelp' class='form-text text-muted'>Choose one image to be featured.</small>
      </div>
      <div class='form-group'> 
        <label for='gallery'>Image Gallery</label>
        <input type='file' class='form-control-file' id='gallery' name='gallery' aria-describedby='galleryHelp' multiple>
        <small id='galleryHelp' class='form-text text-muted'>Upload further images to showcase your property.</small>
      </div> 
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name='email' placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">Will only be used for contact from potential tenants and occasionally us.</small>
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </section>

